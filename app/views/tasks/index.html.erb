<%= stylesheet_link_tag('application') %>

<div class="width-60 center">
  <div class="container">
    <p style="color: green"><%= notice %></p>
    <h1>Tasks</h1>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <div class="container">
        <%= render task %>
          <p>
            <%= link_to "Show this task", task %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="container">
      <%= link_to "New task", new_task_path %>
    </div>
  </div>
</div>